<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerHome"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fitsSystemWindows="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/layoutPict"
                    android:layout_width="match_parent"
                    android:padding="60dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/bg_gradient_profile"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        android:layout_marginBottom="20dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/pictProfile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/dino"/>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textColor="#fff"
                        android:fontFamily="sans-serif"
                        android:textSize="21sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/desc"
                        android:textColor="#fff"
                        android:fontFamily="sans-serif"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutButtonClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:gravity="center_horizontal"
                    app:layout_constraintTop_toBottomOf="@id/layoutPict"
                    app:layout_constraintBottom_toBottomOf="@id/layoutPict">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnToPortfolio"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        app:cardElevation="0dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:background="@drawable/bg_gradient_button"
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                app:cardBackgroundColor="#fff"
                                app:cardCornerRadius="15dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/ic_next"/>

                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_centerInParent="true"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/detail_profile"
                                android:textColor="#fff"
                                android:fontFamily="sans-serif"
                                android:textSize="14sp"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="40dp"
                    app:layout_constraintTop_toBottomOf="@id/layoutButtonClose">

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Menu"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="#292929"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/btnCalculator"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:layout_width="75dp"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="#F8F8F8"
                                        android:layout_height="75dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:layout_width="35dp"
                                                android:src="@drawable/ic_calculator"
                                                android:layout_height="35dp" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Calculator"
                                        android:layout_marginTop="5dp"
                                        android:textColor="#444444"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/btnContact"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:layout_width="75dp"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="#F8F8F8"
                                        android:layout_height="75dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:layout_width="35dp"
                                                android:src="@drawable/ic_contact"
                                                android:layout_height="35dp" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Contact"
                                        android:layout_marginTop="5dp"
                                        android:textColor="#444444"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/btnFriends"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:layout_width="75dp"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="#F8F8F8"
                                        android:layout_height="75dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:layout_width="wrap_content"
                                                android:src="@drawable/ic_friend"
                                                android:adjustViewBounds="true"
                                                android:layout_height="45dp" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Friends"
                                        android:layout_marginTop="5dp"
                                        android:textColor="#444444"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginTop="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_height="wrap_content">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/btnFaceRecognition"
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:layout_width="75dp"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="#F8F8F8"
                                        android:layout_height="75dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:layout_width="35dp"
                                                android:src="@drawable/ic_face_recognition"
                                                android:layout_height="35dp" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Face Verification"
                                        android:gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        android:textColor="#444444"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_height="match_parent">

                                    <androidx.cardview.widget.CardView
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:layout_width="75dp"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="#F8F8F8"
                                        android:layout_height="75dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:layout_width="35dp"
                                                android:src="@drawable/ic_widget"
                                                android:layout_height="35dp" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Upcoming"
                                        android:layout_marginTop="5dp"
                                        android:textColor="#444444"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_height="match_parent">

                                    <androidx.cardview.widget.CardView
                                        android:foreground="?android:attr/selectableItemBackground"
                                        android:layout_width="75dp"
                                        app:cardCornerRadius="12dp"
                                        app:cardElevation="0dp"
                                        app:cardBackgroundColor="#F8F8F8"
                                        android:layout_height="75dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:orientation="vertical"
                                            android:gravity="center"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:layout_width="35dp"
                                                android:src="@drawable/ic_widget"
                                                android:layout_height="35dp" />

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:text="Upcoming"
                                        android:layout_marginTop="5dp"
                                        android:textColor="#444444"
                                        android:textSize="12sp"
                                        android:layout_height="wrap_content" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pelajaran"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="#292929"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="20dp"
                                android:paddingBottom="20dp"
                                android:scrollbars="none">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="200dp"
                                        android:layout_height="match_parent"
                                        app:cardElevation="0dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginRight="20dp"
                                        app:cardBackgroundColor="#A6A6A6"
                                        app:cardCornerRadius="10dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/bg_gradient_profile"
                                                android:padding="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:text="Project One"
                                                    android:textStyle="bold"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="16sp"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="20dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#FFFFFF"
                                                    android:text="@string/keterangan1"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="200dp"
                                        android:layout_height="match_parent"
                                        app:cardElevation="0dp"
                                        android:layout_marginRight="20dp"
                                        app:cardBackgroundColor="#A6A6A6"
                                        app:cardCornerRadius="10dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/bg_gradient_profile"
                                                android:padding="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:text="Project Two"
                                                    android:textStyle="bold"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="16sp"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="20dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#FFFFFF"
                                                    android:text="@string/keterangan2"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="200dp"
                                        android:layout_height="match_parent"
                                        app:cardElevation="0dp"
                                        android:layout_marginRight="20dp"
                                        app:cardBackgroundColor="#A6A6A6"
                                        app:cardCornerRadius="10dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/bg_gradient_profile"
                                                android:padding="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:text="Project Three"
                                                    android:textStyle="bold"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="16sp"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="20dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#FFFFFF"
                                                    android:text="@string/keterangan3"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="200dp"
                                        android:layout_height="match_parent"
                                        app:cardElevation="0dp"
                                        android:layout_marginRight="20dp"
                                        app:cardBackgroundColor="#A6A6A6"
                                        app:cardCornerRadius="10dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/bg_gradient_profile"
                                                android:padding="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:text="Project Four"
                                                    android:textStyle="bold"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="16sp"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="20dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#FFFFFF"
                                                    android:text="@string/keterangan4"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="200dp"
                                        android:layout_height="match_parent"
                                        app:cardElevation="0dp"
                                        android:layout_marginRight="20dp"
                                        app:cardBackgroundColor="#A6A6A6"
                                        app:cardCornerRadius="10dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <RelativeLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:background="@drawable/bg_gradient_profile"
                                                android:padding="10dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerInParent="true"
                                                    android:text="Project Five"
                                                    android:textStyle="bold"
                                                    android:textColor="#FFFFFF"
                                                    android:textSize="16sp"/>

                                            </RelativeLayout>

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:padding="20dp">

                                                <TextView
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:textColor="#FFFFFF"
                                                    android:text="@string/keterangan5"/>

                                            </LinearLayout>

                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                </LinearLayout>

                            </HorizontalScrollView>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/see_portfolio"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:textColor="#292929"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:paddingTop="10dp"
                            android:paddingRight="20dp"
                            android:paddingLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerPortfolio"
                                android:layout_width="match_parent"
                                android:nestedScrollingEnabled="false"
                                android:scrollbars="none"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>

    <FrameLayout
        android:alpha="0"
        android:id="@+id/dim"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bf000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/slideView"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frameProfile"
                android:visibility="visible">

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>